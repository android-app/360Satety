<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/flow_ball_ani_full_green" >

        <Button
            android:id="@+id/blacklist_return"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:textSize="20sp" 
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cranksmsandcall_return"
            android:text="返回" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/blacklist_return"
            android:layout_alignBottom="@+id/blacklist_return"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/blacklist_return"
            android:text="标记最近陌生号码"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/blacklist_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@color/white" >
    </ListView>

    <TextView
        android:id="@+id/tag_subtag"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/crank_sms_btnbg"
        android:gravity="center"
        android:text="标记"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/white" />

</LinearLayout>