<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
>

    <LinearLayout
        android:id="@+id/linearLayout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/crank_call_showNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="130321231321"
            android:textColor="@color/black"
            android:textSize="20sp" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/crank_call_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="2012:11:21"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/crank_call_fag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="无接听"
                android:textSize="15sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/crank_blacklist_fag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:background="@drawable/shield_checkbox_alert_unchecked" 
       android:layout_marginTop="25dp"
       android:layout_alignParentRight="true"
       >
    </ImageView>

</RelativeLayout>